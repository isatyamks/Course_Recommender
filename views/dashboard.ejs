<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Course Recommender</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <header>
            <h1>Welcome, <%= username %>!</h1>
            <a href="/logout" class="logout-btn">Logout</a>
        </header>
        
        <main>
            <section class="recommendations">
                <h2>Recommended Courses for You</h2>
                <p class="recommendation-intro">Based on your LinkedIn and GitHub profiles, we recommend these courses:</p>
                
                <div class="courses-grid">
                    <% recommendations.forEach(function(course) { %>
                    <div class="course-card">
                        <div class="course-level <%= course.level.toLowerCase() %>"><%= course.level %></div>
                        <h3><%= course.title %></h3>
                        <p><%= course.description %></p>
                        <button class="enroll-btn">Enroll Now</button>
                    </div>
                    <% }); %>
                </div>
            </section>
        </main>
    </div>
    <script src="/js/dashboard.js"></script>
</body>
</html>